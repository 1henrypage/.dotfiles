[init]
    defaultBranch = main

[pull]
    # Disable this if it gets annoying 
    rebase = true

[core]
    editor = nvim
    excludesfile = ~/.config/.gitignore_global
    autocrlf = input
    symlinks = true
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
